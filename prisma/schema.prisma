datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Concert {
  id        String   @id @default(cuid())
  date      DateTime
  time      String
  venue     String
  ticketUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
